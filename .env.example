# =============================================================================
# WORKERO BACKEND - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Command: cp .env.example .env (Linux/Mac) or Copy-Item .env.example .env (Windows)
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="Workero API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
# DEVELOPMENT: http://localhost:3001
# PRODUCTION: https://api-workero.xepos.co.uk
APP_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# LOG_CHANNEL: Where to write logs (stack, single, daily, slack, etc.)
# LOG_LEVEL: Minimum log level (debug, info, notice, warning, error, critical, alert, emergency)
# DEVELOPMENT: stack, debug
# PRODUCTION: daily, error
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ---------------------------------------------------------------------

# ---------- LOCAL DEVELOPMENT ----------
# Uncomment this section for local machine (XAMPP, MAMP, Docker)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=workero
DB_USERNAME=root
DB_PASSWORD=root123

# ---------- PRODUCTION (Laravel Forge) ----------
# Uncomment this section for production server
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=workero
# DB_USERNAME=forge
# DB_PASSWORD=      # Usually empty unless set manually

# -----------------------------------------------------------------------------
# Cache & Session Configuration
# -----------------------------------------------------------------------------
# CACHE_DRIVER: Cache driver (file, redis, memcached, etc.)
# SESSION_DRIVER: Session driver (file, redis, database, etc.)
# SESSION_LIFETIME: Session lifetime in minutes
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# -----------------------------------------------------------------------------
# Redis Configuration (Optional - for caching and sessions)
# -----------------------------------------------------------------------------
MEMCACHED_HOST=127.0.0.1
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Mail Configuration
# -----------------------------------------------------------------------------
# Configure your SMTP settings for sending emails
# MAIL_MAILER: Mail driver (smtp, sendmail, mailgun, ses, postmark)
# MAIL_HOST: SMTP server hostname
# MAIL_PORT: SMTP server port (usually 587 for TLS, 465 for SSL)
# MAIL_FROM_ADDRESS: Default "from" email address
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# AWS S3 Configuration (Optional - for file storage)
# -----------------------------------------------------------------------------
# Required if using S3 for file storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# -----------------------------------------------------------------------------
# Frontend Build Assets (Vite)
# -----------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# =============================================================================
# XEPOS CLOUD INTEGRATIONS
# =============================================================================
# Workero is built on the XEPOS Cloud ecosystem
# Get your API keys from: https://cloud.xepos.com
# -----------------------------------------------------------------------------

# XE Accounts API - User authentication and authorization
# Get your API key from XEPOS Cloud dashboard
XE_ACCOUNTS_API_URL=https://accounts.xepos.cloud/api
XE_ACCOUNTS_API_KEY=

# -----------------------------------------------------------------------------
# XE Pay API - Payment Processing
# -----------------------------------------------------------------------------
# Used for processing payments, creating payment links, and handling transactions
# Register at: https://pay.xepos.cloud
XE_PAY_API_URL=https://pay.xepos.cloud/api
XE_PAY_API_KEY=
XE_PAY_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# XE AI Workspace API - AI-Powered Features
# -----------------------------------------------------------------------------
# Used for AI quote generation, scheduling recommendations, and job summaries
# Register at: https://ai.xepos.cloud
XE_AI_API_URL=https://ai.xepos.cloud/api
XE_AI_API_KEY=

# =============================================================================
# WHATSHUB INTEGRATION
# =============================================================================
# WhatsApp Business API integration for messaging
# Register at: https://whatshub.io
# -----------------------------------------------------------------------------
WHATS_HUB_API_URL=https://api.whatshub.io
WHATS_HUB_API_KEY=
WHATS_HUB_WEBHOOK_SECRET=

# =============================================================================
# GOOGLE SERVICES
# =============================================================================
# Required for maps, location services, and calendar sync
# Get API keys from: https://console.cloud.google.com
# -----------------------------------------------------------------------------

# Google Maps API - For location services, geocoding, and route optimization
# Enable: Maps JavaScript API, Geocoding API, Directions API
GOOGLE_MAPS_API_KEY=

# Google Calendar API - For calendar synchronization
# Create OAuth 2.0 credentials in Google Cloud Console
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# JSON Web Token configuration for API authentication
# Generate secret after setup: php artisan jwt:secret
# -----------------------------------------------------------------------------
JWT_SECRET=
JWT_TTL=60

# =============================================================================
# PUSHER / WEBSOCKETS (Optional)
# =============================================================================
# Required for real-time features like live notifications and chat
# Register at: https://pusher.com or use Laravel Reverb
# -----------------------------------------------------------------------------
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# =============================================================================
# NOTES
# =============================================================================
# 1. After copying this file to .env, generate your application key:
#    php artisan key:generate
#
# 2. Generate JWT secret:
#    php artisan jwt:secret
#
# 3. Run database migrations:
#    php artisan migrate
#
# 4. Seed demo data (optional):
#    php artisan db:seed
#
# 5. Start development server:
#    php artisan serve --port=3001
#
# For more information, see INSTALLATION.md
# =============================================================================